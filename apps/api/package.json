{
  "name": "@repo/api",
  "version": "2.0.0",
  "private": true,
  "description": "Live Score API Server",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:bundle": "node esbuild.config.js",
    "build:prod": "rm -rf dist && node esbuild.config.js",
    "start": "node dist/index.js",
    "start:bundle": "NODE_ENV=production node dist/bundle.js",
    "dev": "concurrently \"tsc --watch\" \"nodemon -q dist/index.js\"",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@repo/database": "workspace:*",
    "@sentry/node": "^7.114.0",
    "@supabase/supabase-js": "^2.47.10",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.1",
    "googleapis": "^144.0.0",
    "helmet": "^8.0.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.7.0",
    "socket.io": "^4.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.10.1",
    "@types/node-fetch": "^2.6.12",
    "concurrently": "^9.1.0",
    "esbuild": "^0.27.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.6.3"
  }
}
